<header class="bg-white shadow-sm border-b border-gray-200">
    <div class="container">
        <div class="flex justify-between items-center py-4">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">T</span>
                </div>
                <span class="text-xl font-bold text-gray-900">TicketFlow</span>
            </a>

            <!-- Navigation -->
            <nav class="flex items-center space-x-6">
                <a href="/dashboard" class="text-sm font-medium transition-colors {{ app.request.pathinfo == '/dashboard' ? 'text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">
                    Dashboard
                </a>
                <a href="/tickets" class="text-sm font-medium transition-colors {{ app.request.pathinfo == '/tickets' ? 'text-blue-600' : 'text-gray-600 hover:text-gray-900' }}">
                    Tickets
                </a>
                <div class="flex items-center space-x-4">
                    <span class="text-sm text-gray-700">
                        Welcome, {{ session.user.name }}
                    </span>
                    <form method="POST" action="/auth/logout" class="inline">
                        <button type="submit" class="btn btn-secondary text-sm">
                            Logout
                        </button>
                    </form>
                </div>
            </nav>
        </div>
    </div>
</header>