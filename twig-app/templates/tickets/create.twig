<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Ticket - TicketFlow</title>
    <style>
        {{ include('styles/design-system.css') }}
        
        .ticket-form-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .ticket-form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    {% include 'partials/header.twig' %}
    
    <div class="container">
        <div class="ticket-form-container">
            <div class="ticket-form-header">
                <h1>Create New Ticket</h1>
                <a href="/tickets" class="btn btn-secondary">Back to Tickets</a>
            </div>

            {% if error %}
                <div class="error-banner">
                    {{ error }}
                </div>
            {% endif %}

            <form method="POST" action="/tickets">
                <div class="form-group">
                    <label for="title" class="form-label">Title *</label>
                    <input type="text" id="title" name="title" class="form-input" required>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-input" rows="4"></textarea>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="status" class="form-label">Status *</label>
                        <select id="status" name="status" class="form-input" required>
                            <option value="open">Open</option>
                            <option value="in_progress">In Progress</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="priority" class="form-label">Priority</label>
                        <select id="priority" name="priority" class="form-input">
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/tickets" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Create Ticket</button>
                </div>
            </form>
        </div>
    </div>

    {% include 'partials/footer.twig' %}
</body>
</html>