<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Ticket - TicketFlow</title>
    <style>
        {{ include('styles/design-system.css') }}
        
        .ticket-form-container {
            max-width: 600px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    {% include 'partials/header.twig' %}
    
    <div class="container">
        <div class="ticket-form-container">
            <div class="ticket-form-header">
                <h1>Edit Ticket</h1>
                <a href="/tickets" class="btn btn-secondary">Back to Tickets</a>
            </div>

            {% if error %}
                <div class="error-banner">
                    {{ error }}
                </div>
            {% endif %}

            <form method="POST" action="/tickets/{{ ticket.id }}">
                <div class="form-group">
                    <label for="title" class="form-label">Title *</label>
                    <input type="text" id="title" name="title" class="form-input" value="{{ ticket.title }}" required>
                </div>

                <div class="form-group">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" name="description" class="form-input" rows="4">{{ ticket.description }}</textarea>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="status" class="form-label">Status *</label>
                        <select id="status" name="status" class="form-input" required>
                            <option value="open" {{ ticket.status == 'open' ? 'selected' : '' }}>Open</option>
                            <option value="in_progress" {{ ticket.status == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                            <option value="closed" {{ ticket.status == 'closed' ? 'selected' : '' }}>Closed</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="priority" class="form-label">Priority</label>
                        <select id="priority" name="priority" class="form-input">
                            <option value="low" {{ ticket.priority == 'low' ? 'selected' : '' }}>Low</option>
                            <option value="medium" {{ ticket.priority == 'medium' ? 'selected' : '' }}>Medium</option>
                            <option value="high" {{ ticket.priority == 'high' ? 'selected' : '' }}>High</option>
                        </select>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="/tickets" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Update Ticket</button>
                </div>
            </form>
        </div>
    </div>

    {% include 'partials/footer.twig' %}
</body>
</html>